  <div class="container">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
    <div class="row">
      <div class="col-md-3">
        <%= render 'list', book: @book %>
      </div>
        
      <div class="col-md-8 offset-md-1">
          <h1>Books</h1>
            <table>
              <thead>
                <tr>
                  <th></th>
                  <th>title</th>
                  <th>opinion</th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <tr>
                  <td><%= link_to "/users/#{book.user_id}" do %> <%= image_tag book.user.get_profile_image(100,100) %> <% end %></td>
                  <td><%= link_to book.title, "/books/#{book.id}"  %></td>
                  <td><%= book.body %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
     
           
          
    
                
    
      