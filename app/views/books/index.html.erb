  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
      
        <table>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
      
      <% if @user == current_user %>
        <button type="button" class="btn btn-outline-secondary">
          <%= link_to edit_user_path(@user) do %>
            <i class="fa-solid fa-user-gear"></i><% end %>
        </button>
      <% end %>
     
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Opinion</h4>
          <%= f.text_area :body %><br>
        <div class="create_book">
          <%= f.submit 'Create Book'  %>
        </div>
      <% end %>
      </div>
     
      <div class="col-md-8">
          <h1>Books</h1>
            <table>
              <thead>
                <tr>
                  <th></th>
                  <th>title</th>
                  <th>opinion</th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <tr>
                  <td><%= link_to "/users/#{book.user_id}" do %> <%= image_tag book.user.get_profile_image(100,100) %> <% end %></td>
                  <td><%= link_to book.title, "/books/#{book.id}"  %></td>
                  <td><%= book.body %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
           
          
    
                
    
      