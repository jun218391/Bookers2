  <div class="container">
    <div class="row">
      <%= render 'list', book: @book %>
      <div class="col-md-8 offset-md-1">
          <h1>Books</h1>
            <table>
              <thead>
                <tr>
                  <th></th>
                  <th>title</th>
                  <th>opinion</th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <tr>
                  <td><%= link_to "/users/#{book.user_id}" do %> <%= image_tag book.user.get_profile_image(100,100) %> <% end %></td>
                  <td><%= link_to book.title, "/books/#{book.id}"  %></td>
                  <td><%= book.body %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
     
           
          
    
                
    
      