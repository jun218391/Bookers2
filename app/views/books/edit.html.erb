<div class="container">
  <div class="row">
    <div class="col">
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <label for="inputName">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputName" %><br>
        <label for="inputImage">Opinion</label><br>
        <%= f.text_area :body  %><br>
         <%= f.submit "Update Book" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
      
    </div>
  </div>
</div>